// User function Template for Java

class Solution {
    public void segregateElements(int[] arr) {
        // Your code goes here
        ArrayList<Integer> pos =new ArrayList<>();
        ArrayList<Integer> neg =new ArrayList<>();
        
        for(int n : arr){
            if(n < 0){
                neg.add(n);
            }else{
                pos.add(n);
            }
        }
        
        int index =0;
        for(int n : pos){
            arr[index++] =n;
           
        }
        for(int n : neg){
            arr[index++] =n;
        }
    }
}
